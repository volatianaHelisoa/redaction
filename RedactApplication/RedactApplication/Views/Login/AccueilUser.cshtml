@model RedactApplication.Models.UTILISATEURViewModel
@{
    ViewBag.Title = "Acceuil user";
}
@section Scripts
{
    <link rel="stylesheet" href="~/Content/css/elements/login.css">
    <link rel="stylesheet" href="~/Content/css/layout/layout.css">
}
<main>
    <div class="login-container flex-content flex-jcenter-acenter flex-col">
        <div class="login-form with-shadow">
            <!-- ajout id modif-mdp -->
            <div class="head gradient-blue icon-bottom">
                <h1>Bienvenue !</h1>
            </div>
            <div class="content-section">
                <div class="compte-info">
                    <span class="avatar">
                        <img src="@Model.logoUrl">
                    </span>
                    @Model.userNom
                </div>

                @using (Html.BeginForm("AuthentificationUser", "Login", FormMethod.Post, new { @class = "formfields" }))
                {
                    <label for="Mypassword" class="pass-input">
                        @Html.PasswordFor(x => x.userMotdepasse, new { @placeholder = "Mot de passe", @required = true, @type = "password" })
                    </label>
                    <div class="flex-content flex-jcenter-acenter save-content">
                        <span class="SavePass">
                            @Html.CheckBoxFor(x => x.saveOnComputer, new { @checked = "checked", @type = "checkbox" })
                            Se souvenir de moi
                        </span>
                        <a href="" class="link forgotPass">Mot de passe oublié ?</a>
                    </div>

                    @Html.ActionLink("Mot de passe oublié ?", "ForgotPassword", "Login", new { @class = "btn btn-primary" })
                }
            </div>
        </div>
        <a href="#" class="watermark-mc">
            <img src="~/images/powered-by.jpg" alt="" srcset="">
        </a>
    </div>
</main>

@if (Model != null)
{
    <script>
        document.getElementById('userMotdepasse').value = '@Model.userMotdepasse';
    </script>
}



