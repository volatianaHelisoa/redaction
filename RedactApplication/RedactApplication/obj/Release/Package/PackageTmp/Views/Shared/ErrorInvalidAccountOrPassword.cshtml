
@model System.Web.Mvc.HandleErrorInfo
@{
    ViewBag.Title = "Erreur";
}

<div class="flex-content flex-jcenter-acenter flex-col pop-up">
    <div class="popup-container with-shadow">
        <div class="head gradient-blue">
            <h1>OUPS !</h1>
        </div>
        <div class="content-section text-centered icon-bottom">
            <i class="pop-icon red-bg"></i>
            <p>Login ou mot de passe invalide. <br> Cliquez sur le bouton ci-dessous pour aller à la page de connexion.</p>
          
                @Html.ActionLink("Reconnecter", "Accueil", "Login", new { @class = "btn btn-primary" })
            
        </div>
    </div>

</div>
<script>
    function redirectLogin(parameters) {
        window.location.href = "/Login/Accueil";
    }
</script>