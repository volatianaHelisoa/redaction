                    {
                        <div class="item" data-index="1" id="theme1">
                            <div class="thumb with-shadow"><img src="~/images/theme1_thumb.jpg" /></div>
                            <span class="choose-color">Thème 1</span>
                            <div class="theme-param theme1__templates">
                                <div class="control-group">
                                    <h4>Selectionnez vos couleurs</h4>
                                    <label class="control control--checkbox">
                                        <input type="radio" checked="checked" value="default" name="color-select" />
                                        <div class="control__indicator"></div>
                                        <div class="color-scheme default">
                                            <dd class="color1"></dd>
                                            <dd class="color2"></dd>
                                            <dd class="color3"></dd>
                                        </div>
                                    </label>
                                    <label class="control control--checkbox">
                                        <input type="radio" name="color-select" value="dark" />
                                        <div class="control__indicator"></div>
                                        <div class="color-scheme dark">
                                            <dd class="color1"></dd>
                                            <dd class="color2"></dd>
                                            <dd class="color3"></dd>
                                        </div>
                                    </label>
                                    <label class="control control--checkbox">
