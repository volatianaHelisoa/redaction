                                            <dd class="color1"></dd>
                                            <dd class="color2"></dd>
                                            <dd class="color3"></dd>
                                        </div>
                                    </label>

                                    <div class="create-theme">
                                        <input type="submit" value="Créer" class="btn btn-success btn-small">
                                       <a class="btn btn-warning btn-small cancel-color-choice" id="close-1">Annuler</a>
                                    </div>
                                </div>
