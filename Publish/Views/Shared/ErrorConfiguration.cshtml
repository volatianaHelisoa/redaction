@model System.Web.Mvc.HandleErrorInfo



@{
    ViewBag.Title = "Erreur de configuration de la messagerie";
}

<div class="flex-content flex-jcenter-acenter flex-col pop-up">
    <div class="popup-container with-shadow">
        <div class="head gradient-blue">
            <h1>OUPS !</h1>
        </div>
        <div class="content-section text-centered icon-bottom">
            <i class="pop-icon red-bg"></i>
            <p>L'envoi d'un e-mail a échoué. Veuillez vérifier votre configuration ou contacter votre administrateur.</p>

            @using (Html.BeginForm("Accueil", "Login", FormMethod.Post))
            {
                <input type="submit" class="btn btn-primary" value="Ok">

            }

        </div>
    </div>
    <script>
    function redirectForgotten(parameters) {
        window.location.href = "/Login/MotDePasseOublie";
    }
    </script>
</div>
