

@{
    ViewBag.Title = "Notification";
 
}

<div class="flex-content flex-jcenter-acenter flex-col pop-up">
    <div class="popup-container with-shadow">
        <div class="head gradient-blue">
            <h1>Terminé</h1>
        </div>
        <div class="content-section text-centered icon-bottom">
            <i class="pop-icon green-bg"></i>
            <p>Nous venons d'envoyer les instructions de réinitialisation du mot de passe à <strong class="green-text">@Model.userMail</strong></p>
            
                @using (Html.BeginForm("DoSendMail", "Login", FormMethod.Post))
                {
                    <input type="submit" class="btn btn-primary" value="Ok">

                }
           
        </div>
    </div>

</div>

